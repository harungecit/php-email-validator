{
    "name": "harungecit/php-email-validator",
    "description": "A comprehensive PHP email validation library to check format, detect disposable emails, validate MX records, and support batch validation.",
    "type": "library",
    "keywords": [
        "email",
        "validation",
        "validator",
        "disposable",
        "email-validator",
        "mx-record",
        "php",
        "email-verification",
        "spam-protection",
        "blocklist",
        "allowlist"
    ],
    "homepage": "https://github.com/harungecit/php-email-validator",
    "require": {
        "php": ">=7.4",
        "ext-filter": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0 || ^11.0 || ^12.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "HarunGecit\\EmailValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HarunGecit\\EmailValidator\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Harun Ge√ßit",
            "email": "info@harungecit.com",
            "homepage": "https://harungecit.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/harungecit/php-email-validator/issues",
        "source": "https://github.com/harungecit/php-email-validator"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit tests",
        "test-coverage": "phpunit tests --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "suggest": {
        "ext-intl": "For internationalized domain name (IDN) support"
    }
}
